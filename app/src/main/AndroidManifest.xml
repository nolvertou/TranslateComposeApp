<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Allows the app to see all other apps on the device.
         This is a powerful permission and should be used with caution.
         It can be useful for features like finding other translation-related apps. -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <!-- Allows the app to connect to the internet.
         This is necessary for online translation services and for downloading language models. -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Allows the app to record audio from the microphone.
         This is used for the speech-to-text feature. -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <!-- This block declares the app's intention to interact with other apps.
         This makes specific external services visible to the app on newer Android versions
         without needing the QUERY_ALL_PACKAGES permission in many cases. -->
    <queries>
        <!-- For Text-To-Speech (voice synthesizer). This allows the app to find and use TTS engines. -->
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
        <!-- For speech recognition. This allows the app to find and use speech recognizer services. -->
        <intent>
            <action android:name="android.speech.RecognitionService"/>
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TranslateComposeApp"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TranslateComposeApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>